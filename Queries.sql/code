-- Create query to obtain emp number, first/last name, gender, and salary

select employees.emp_no,last_name,first_name,gender,salary
from employees
inner join salaries
on salaries.emp_no = employees.emp_no

-- Create query to find employees hired in 1986
select * from employees where EXTRACT(year FROM hire_date)=1986

-- Create mamagers query.--List the manager of each department with the following information: department number, department name, the manager's employee number, last name, first name, and start and end employment dates.

select dept_manager.dept_no,dept_name,dept_manager.emp_no,first_name,last_name,hire_date,to_date as empl_end_date from dept_manager
inner join employees on 
employees.emp_no = dept_manager.emp_no
inner join departments on
departments.dept_no = dept_manager.dept_no

-- Create query to get employees by department --List the department of each employee with the following information: employee number, last name, first name, and department name.

select employees.emp_no,last_name,first_name,dept_name from employees
inner join dept_emp
on dept_emp.emp_no=employees.emp_no
inner join departments
on departments.dept_no=dept_emp.dept_no

* Create query to find employees named Hercules and last names begin with B 
starts with B*/

select * from employees where first_name='Hercules' and last_name like 'B%'

* Create a query for employees of Sales department, --including their employee number, last name, first name, and department name.

select employees.emp_no,last_name,first_name,dept_name from departments
inner join dept_emp on 
dept_emp.dept_no = departments.dept_no
inner join employees on 
employees.emp_no = dept_emp.emp_no
where dept_name='Sales' or dept_name='Development'



* Create a query count of employee last names in descending order*

select count(last_name) as counter, last_name from employees
group by 2 order by 1 desc
